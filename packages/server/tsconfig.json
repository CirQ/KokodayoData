{
  "extends": "../../tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./typings"
    ],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@kkdy/api": [
        "../api/src/api/index.ts"
      ],
      "x": [
        "../api/src/api/index.ts"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}