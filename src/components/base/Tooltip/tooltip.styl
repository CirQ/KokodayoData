@import '../styl/effect'

.popper-arrow {
  // ! 靠左定位
  text-align: left
}

.tooltip {
  background: #fff
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1)
  font-size: 12px
  max-width: 90vw
  min-width: 60px
  white-space: nowrap
  box-sizing: border-box

  &.dark {
    background: darkBgColor
    color: darkFontColor

    .popper-arrow {
      &:before {
        background: darkBgColor
      }
    }
  }

  &.white {
    background: whiteBgColor
    color: whiteFontColor
    box-shadow: 0 2px 12px 1px rgba(0, 0, 0, 0.18)

    .popper-arrow {
      &:before {
        background: whiteBgColor
      }
    }
  }
}
