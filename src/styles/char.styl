.char-set-contianer-wrapper {
  display: flex
  height: 100%
}

.char-half-container {
  width: 110px
  position: relative
  font-size: 0
  align-items: flex-end
  display: flex
  height: 220px
}

.char-profile-container {
  height: 110px
  position: relative

  & + .char-half-container {
    margin-top: 20px
  }
}

.char-half-container, .char-profile-container {
  &::before {
    content: ''
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    border: 10px solid #fff
    box-sizing: border-box
    box-shadow: 0px 2px 4px 1px rgba(0, 0, 0, 0.31), 0px 2px 6px 0px rgba(0, 0, 0, 0.47) inset
  }
}
